    <script>
        $(document).ready(function() {
                // alert(454);
                $('[data-toggle="popover "]').popover({
                    'html': true
                });

                $(".rem ").mouseover(function() {
                    //   alert('over');
                    $(this).addClass('hvr');

                });

                $(".rem ").mouseout(function() {
                    //  alert('in');
                    $('.rem').removeClass('hvr');

                });
            }

        );
